<% provide(:title, "Edit Holding") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @transaction, :url => { :controller => 'transactions', :action => 'update', :id => @transaction} do |f| %>
    		<%= f.label :amount, "Amount" %>
    		<%= f.text_area :amount %>
    		<%= f.submit "Update" %>
		<% end %>
	</div>
</div>