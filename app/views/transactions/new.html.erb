<% provide(:title, "Add Coin") %>
<h1>Add a holding</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @transaction, :url => { :controller => 'transactions', :action => 'create' } do |f| %>
    	<%= f.label :name, "Name" %>
    	<%= f.hidden_field :user_id, value: @current_user %>
    	<%= f.select :coin_id, options_from_collection_for_select(@coins, "id", "name") %>

   		<%= f.label :amount, "Amount" %>
    	<%= f.text_area :amount %>

    	<%= f.submit "Add to portfolio" %>
		<% end %>
	</div>
</div>

